{
  "name": "bini-game-town",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com-sb:seongbiny/biniGameTown.git",
  "author": "seongbiny <s30ngb1n@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "packages/*",
    "packages/game/*",
    "packages/web/*"
  ],
  "scripts": {
    "dev": "yarn workspace @bini-game-town/web dev",
    "prebuild": "mkdir -p dist/game/bini-puzzle dist/game/flappy-plane",
    "build": "yarn workspace @bini-game-town/web build && yarn workspace @bini-game-town/bini-puzzle build && yarn workspace @bini-game-town/flappy-plane build",
    "build:games": "yarn workspace @bini-game-town/bini-puzzle build && yarn workspace @bini-game-town/flappy-plane build",
    "build:web": "yarn workspace @bini-game-town/web build",
    "build:puzzle": "yarn workspace @bini-game-town/bini-puzzle build",
    "build:flappy": "yarn workspace @bini-game-town/flappy-plane build",
    "preview": "yarn workspace @bini-game-town/web preview",
    "lint": "yarn workspaces foreach -p run lint"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}
