{
  "name": "bini-game-town",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com-sb:seongbiny/biniGameTown.git",
  "author": "seongbiny <s30ngb1n@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "packages/*",
    "packages/game/*"
  ],
  "scripts": {
    "dev:web": "yarn build:games && yarn workspace @bini-game-town/web dev",
    "build:web": "yarn workspace @bini-game-town/web build",
    "build:puzzle": "yarn workspace @bini-game-town/bini-puzzle build:puzzle",
    "build:flappy": "yarn workspace @bini-game-town/flappy-plane build:flappy",
    "build:games": "yarn workspaces foreach -p --include \"@bini-game-town/game-*\" run build",
    "build": "yarn build:games && yarn build:web"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}
